{# templates/default/index.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'navbar_about'|trans }}</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
</head>
<body>

<div class="container">
    <div class="row  p-2 m-0">
        <div class="col-12  p-2">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('index') }}">
                        <b class="text-success"><</b>
                        <b>{{ app.user ? app.user.roles[0]|translate_role : 'guest'|trans }}</b>
                        <b class="text-success">\></b>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav ml-auto">
                            <a class="nav-link active" href="{{ path('iletisim') }}">{{ 'navbar_contact'|trans }}</a>
                            <a class="nav-link active" href="{{ path('hakkinda') }}">{{ 'navbar_about'|trans }}</a>
                            {% if app.user %}
                                <a class="nav-link active" href="{{ path('logout') }}">{{ 'navbar_logout'|trans }}</a>
                            {% else %}
                                <a class="nav-link active" href="{{ path('login') }}">{{ 'navbar_login'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="row p-2 m-0 mt-1 text-center">
        <div class="col-12 p-4">
            <h3>{{ 'hakkinda_heading'|trans }}</h3>
            <p>{{ 'hakkinda_intro'|trans }}</p>
            <p>{{ 'hakkinda_roles'|trans }}</p>
        </div>
        <div class="col-12 mt-3">
            <h5>{{ 'features_heading'|trans }}</h5>
            <ul class="list-unstyled">
                <li><strong>{{ 'feature_product_management'|trans }}</strong> {{ 'feature_product_management_statement' }}</li>
                <li><strong>{{ 'feature_category_management'|trans }}</strong> {{ 'feature_category_management_statement' }}</li>
                <li><strong>{{ 'feature_role_based_access'|trans }}</strong> {{ 'feature_product_management_statement' }}</li>
            </ul>
        </div>
        <div class="col-12 mt-3">
            <h5>{{ 'technologies_heading'|trans }}</h5>
            <p>{{ 'technologies_intro'|trans }}</p>
        </div>
    </div>

    <div class="row  p-2 m-0 my-5">
        <hr>
        <div class="col-6 font-weight-bold  mt-2">
            <h3>{{ 'footer_name'|trans }}</h3>
        </div>
        <div class="d-flex text-center flex-column col-6 font-weight-bold  mt-2">
            <h3>{{ 'footer_social'|trans }}</h3>
        </div>
        <div class="col-6 font-weight-bold  mt-2">
        </div>
        <div class="d-flex text-center flex-column col-6  mt-2">
            <a href="https://github.com/dogukanbalcii" target="_blank" data-toggle="tooltip" data-placement="top" title="GitHub Profiline Git">
                GitHub
            </a>
        </div>
        <div class="col-6 font-weight-bold  mt-2">
            <!-- DiÄŸer iÃ§erik -->
        </div>
        <div class="d-flex text-center flex-column col-6  mt-2">
            <a href="https://www.linkedin.com/in/dogukan-balci/" target="_blank" data-toggle="tooltip" data-placement="top" title="LinkedIn Profiline Git">
                Linkedin
            </a>
        </div>
    </div>
</div>

<!-- jQuery ilki, sonra Popper.js, sonra da Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
