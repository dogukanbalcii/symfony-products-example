{# templates/default/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <style>

    </style>
</head>
<body>

<div class="container">
    <div class="row  p-2 m-0">
        <div class="col-12  p-2">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><b class="text-success"><</b><b> Username or Guest </b><b class="text-success">\></b></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav ml-auto">
                            <a class="nav-link active" href="#">İletişim</a>
                            <a class="nav-link active" href="#">Hakkında</a>
                            <a class="nav-link active" href="#">Giriş Yap
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-6  p-2 urunKategoriFontSize text-center">
            <a href="{{ path('urun_listesi') }}" class="urun-link">
                Ürünler Ekle
            </a>
        </div>
        <div class="col-6  p-2 urunKategoriFontSize text-center">
            <a href="{{ path('kategori_ekle') }}" class="urun-link">
                Kategori Ekle
            </a>
        </div>


    </div>
    <div class="row  p-2 m-0 mt-1">
        <div class="col-12  p-4">
            <h3>Ürünler</h3>
        </div>
    </div>
    <div class="row  p-2 m-0">
        {% for urun in pagination %}
            <div class="col-12  p-2 urunlerFontSize">
                <hr>
                <div class="row p-2 m-0  ">
                    <div class="col-3 m-0 ">
                        {{ urun.isim }}
                    </div>
                    <div class="col-3 m-0 ">
                        {{ urun.fiyat }} TL
                    </div>
                    <div class="col-3 m-0 ">
                        {{ urun.urunAciklamasi }}
                    </div>
                    <div class="col-3 m-0 ">
                        {{ urun.urunKategori.isim }} Kategorisinde
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12  p-2 urunlerFontSize">
                <hr>
                Ürün bulunamadı
            </div>
        {% endfor %}
        <div class="col-12   d-flex justify-content-center text-center p-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    <div class="row  p-2 m-0 my-5">
        <hr>
        <div class="col-6 font-weight-bold  mt-2">
            <h3>Doğukan Balcı</h3>
        </div>
        <div class="d-flex text-center flex-column col-6 font-weight-bold  mt-2">
            <h3>Sosyal</h3>
        </div>
        <div class="col-6 font-weight-bold  mt-2">
        </div>
        <div class="d-flex text-center flex-column col-6  mt-2">
            <a href="https://github.com" target="_blank" data-toggle="tooltip" data-placement="top" title="GitHub Profiline Git">
                GitHub
            </a>
        </div>

        <div class="col-6 font-weight-bold  mt-2">
            <!-- Diğer içerik -->
        </div>

        <div class="d-flex text-center flex-column col-6  mt-2">
            <a href="https://linkedin.com" target="_blank" data-toggle="tooltip" data-placement="top" title="LinkedIn Profiline Git">
                Linkedin
            </a>
        </div>



    </div>
</div>

<!-- jQuery ilki, sonra Popper.js, sonra da Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
