{# templates/urunler/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
</head>
<body>

<div class="container border border-danger p-2 my-3">
    <div class="row border border-info p-2 m-0">
        <div class="col-12 border border-warning p-2">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><b class="text-success"><</b><b> Username or Guest </b><b class="text-success">\></b></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav ml-auto">
                            <a class="nav-link active" href="#">İletişim</a>
                            <a class="nav-link active" href="#">Hakkında</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-6 border border-warning p-2">
            Ürünler Ekle, Kategori Ekle (if access admin)
        </div>
    </div>
    <div class="row border border-info p-2 m-0 mt-5">
        <div class="col-12 border border-warning p-4">
            <h3>Ürünler</h3>
        </div>
    </div>
    <div class="row border border-info p-2 m-0">
        {% for urun in urunler %}
            <div class="col-12 border border-warning p-2 urunlerFontSize">
                <hr>
                <div class="row p-2 m-0 border border-info ">
                    <div class="col-3 p-2 m-0 border border-warning">
                        {{ urun.isim }}
                    </div>
                    <div class="col-3 p-2 m-0 border border-warning">
                        {{ urun.fiyat }}
                    </div>
                    <div class="col-3 p-2 m-0 border border-warning">
                        {{ urun.urunAciklamasi }}
                    </div>
                    <div class="col-3 p-2 m-0 border border-warning">
                        {{ urun.urunKategori.isim }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 border border-warning p-2 urunlerFontSize">
                <hr>
                Ürün bulunamadı
            </div>
        {% endfor %}
    </div>
    <div class="row border border-info p-2 m-0">
        <div class="col-12 border border-warning text-center p-4">
            <h3>Query Pagination</h3>
        </div>
    </div>
    <div class="row border border-info p-2 m-0">
        <div class="col-12 border border-warning p-4">

        </div>
    </div>
</div>

<!-- jQuery ilki, sonra Popper.js, sonra da Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
